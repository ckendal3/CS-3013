<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wdibstudios.platerate.PlateReviews"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/lookAtComment"
        android:layout_width="308dp"
        android:layout_height="292dp"
        android:layout_marginBottom="16dp"
        android:hint="Review Comment"
        android:text="brrrr"
        android:textAlignment="textStart"
        android:textColor="@color/LineYellow"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text='"bbbrr"' />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/lookAtUTurnButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:tint="@android:color/transparent"
        app:backgroundTint="@android:color/transparent"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/lookAtReviewTemp"
        app:layout_constraintEnd_toStartOf="@+id/lookAtReviewTemp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/uturngraphic" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/AddReviewButton"
        android:layout_width="100dp"
        android:layout_height="165dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:tint="@android:color/transparent"
        app:backgroundTint="@android:color/transparent"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/lookAtPlateNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lookAtReviewTemp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="@android:color/transparent"
        app:srcCompat="@mipmap/addreviewgraphic" />

    <RatingBar
        android:id="@+id/lookAtRating"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize=".5"
        android:theme="@style/RatingBar"
        app:layout_constraintBottom_toTopOf="@+id/lookAtComment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lookAtReviewTemp"
        app:layout_constraintVertical_bias="0.806" />

    <TextView
        android:id="@+id/lookAtState"
        android:layout_width="115dp"
        android:layout_height="22dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="State"
        android:textAlignment="center"
        android:textColor="@color/LineYellow"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/lookAtRating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lookAtReviewTemp" />

    <ImageView
        android:id="@+id/lookAtReviewTemp"
        android:layout_width="160dp"
        android:layout_height="109dp"
        android:layout_marginBottom="440dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.205"
        app:srcCompat="@mipmap/platetemplate" />

    <TextView
        android:id="@+id/lookAtPlateNumber"
        android:layout_width="143dp"
        android:layout_height="67dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/SoftGrey"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/lookAtReviewTemp"
        app:layout_constraintEnd_toEndOf="@+id/lookAtReviewTemp"
        app:layout_constraintStart_toStartOf="@+id/lookAtReviewTemp"
        app:layout_constraintTop_toTopOf="@+id/lookAtReviewTemp" />

</android.support.constraint.ConstraintLayout>
